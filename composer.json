{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "7.4.*",
        "ext-dom": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "doctrine/dbal": "^2.10",
        "doctrine/migrations": "^2.2",
        "guzzlehttp/guzzle": "^6.3",
        "monolog/monolog": "^2.0",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.4",
        "symfony/console": "^v5.0",
        "telegram-bot/api": "^2.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "CinemaBot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CinemaBot\\": "tests/"
        }
    }
}
