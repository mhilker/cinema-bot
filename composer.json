{
    "require": {
        "ext-dom": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "telegram-bot/api": "^2.3",
        "symfony/console": "^4.3",
        "guzzlehttp/guzzle": "^6.3",
        "slim/slim": "^3.12"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "CinemaBot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CinemaBot\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "tools/phpcs phpcs.xml src tests",
        "cs-fix": "tools/phpcbf phpcs.xml src tests",
        "test": "tools/phpunit"
    }
}
